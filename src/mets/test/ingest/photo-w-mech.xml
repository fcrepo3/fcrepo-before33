	<!-- DATASTREAM : METADATA DESCRIBING THE DATA BINDING SPECIFICATION  FOR THE WATERMARKING MECHANISM -->
	<!-- Here we store XML data that conforms to the Fedora dsBindSpec schema. -->
	<!-- ****************************************************************************************************************************************** -->
	<METS:amdSec ID="DSBIND">
		<METS:techMD ID="TECH1.0" CREATED="2002-02-17T06:32:00" STATUS="">
			<METS:mdWrap MIMETYPE="text/xml" MDTYPE="OTHER" LABEL="Datastream Binding Specification for Watermarker">
				<METS:xmlData>
					<fbs:DSBindingSpec>
						<fbs:mechanismID scheme="URN">uva-bmech-image-w:112</fbs:mechanismID>
						<fbs:behaviorDefID scheme="URN">uva-bdef-image-w:101</fbs:behaviorDefID>
						<fbs:DSBinding BindingKeyName="PHOTO" DSMin="1" DSMax="1" DSOrdinality="false">
							<fbs:DSBindingLabel>A photographic image</fbs:DSBindingLabel>
							<fbs:DSBindingInstructions>photo in image/gif or image/jpg format at 600 dpi</fbs:DSBindingInstructions>
							<fbs:DSMIME>image/jpg image/gif</fbs:DSMIME>
						</fbs:DSBinding>
						<fbs:DSBinding BindingKeyName="WATERMARK" DSMin="1" DSMax="1" DSOrdinality="false">
							<fbs:DSBindingLabel>watermark file</fbs:DSBindingLabel>
							<fbs:DSBindingInstructions>a watermark file in image/gif format at 300 dpii</fbs:DSBindingInstructions>
							<fbs:DSMIME>image/gif</fbs:DSMIME>
						</fbs:DSBinding>
					</fbs:DSBindingSpec>
				</METS:xmlData>
			</METS:mdWrap>
		</METS:techMD>
	</METS:amdSec>
	<!-- ****************************************************************************************************************************************** -->
	<!--  DATASTREAM -  METADATA IN THE FORM OF A WSDL SPECIFICATION FOR THE WATERMARKING MECHANISM -->
	<!--  Here we store WSDL inline as a form of metadata about the mechanism represented by this object. -->
	<!-- ****************************************************************************************************************************************** -->
	<METS:amdSec ID="WSDL">
		<METS:techMD ID="TECH2.0" CREATED="2002-02-17T06:32:00" STATUS="">
			<METS:mdWrap MIMETYPE="text/xml" MDTYPE="OTHER" LABEL="WSDL service definitions for Watermarker">
				<METS:xmlData>
					<wsdl:definitions name="image-w" targetNamespace="uva-bmech-image-w:112" xmlns="uva-bmech-image-w:112" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap" xmlns:soapenc="http://schemas.xmlsoap.org/wsdl/soap/encoding" xmlns:http="http://schemas.xmlsoap.org/wsdl/http/" xmlns:mime="http://schemas.xmlsoap.org/wsdl/mime/">
						<!-- ************************************************************************************************************************************** -->
						<!-- WSDL: SCHEMA TYPE DEFINITIONS FOR THE WATERMARKING MECHANISM-->
						<!-- Here are all data types needed by the mechanism.  These could also be imported from a separate file.  -->
						<!-- *************************************************************************************************************************************-->
						<wsdl:types>
							<xsd:schema targetNamespace="uva-bmech-image-w:112" xmlns:pa="uva-bmech-image-w:112" xmlns:fedora="http://fedora.comm.nsdlib.org/" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap" xmlns:soapenc="http://schemas.xmlsoap.org/wsdl/soap/encoding" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
								<!-- ********************************************************************************************************************************* -->
								<xsd:import namespace="http://fedora.comm.nsdlib.org/" schemaLocation="fedora-dsbind.xsd"/>
								<!-- **************************************************************************************************************** -->
								<!-- TYPE DEFINITIONS TO SUPPORT MECHANISM OPERATIONS (when using SOAP) -->
								<!-- These are restrictions on the abstract fedora datastream binding type (see fedora-dsbind.xsd). -->
								<!-- They specifiy a base64Binary format for transmitting datastreams from Fedora repository  -->
								<!--  to the mechanism using a SOAP message.  -->
								<!-- ************************************************************************************************************** -->
								<xsd:complexType name="PhotoTransmitType">
									<xsd:complexContent>
										<xsd:restriction base="fedora:dsBindBaseType">
											<xsd:sequence>
												<xsd:element name="keyName" type="xsd:string" fixed="PHOTO"/>
												<xsd:element name="MIME">
													<xsd:simpleType>
														<xsd:restriction base="xsd:string">
															<xsd:enumeration value="image/gif"/>
														</xsd:restriction>
													</xsd:simpleType>
												</xsd:element>
												<xsd:element name="content" type="xsd:base64Binary"/>
											</xsd:sequence>
										</xsd:restriction>
									</xsd:complexContent>
								</xsd:complexType>
								<xsd:complexType name="WatermarkTransmitType">
									<xsd:complexContent>
										<xsd:restriction base="fedora:dsBindBaseType">
											<xsd:sequence>
												<xsd:element name="keyName" type="xsd:string" fixed="WATERMARK"/>
												<xsd:element name="MIME">
													<xsd:simpleType>
														<xsd:restriction base="xsd:string">
															<xsd:enumeration value="image/gif"/>
														</xsd:restriction>
													</xsd:simpleType>
												</xsd:element>
												<xsd:element name="content" type="xsd:base64Binary"/>
											</xsd:sequence>
										</xsd:restriction>
									</xsd:complexContent>
								</xsd:complexType>
								<!-- ******************************************************************************************************************** -->
								<!-- WSDL:  UTILITY TYPE REQUIRED OF ALL FEDORA-COMPLIANT MECHANISMS -->
								<!-- ******************************************************************************************************************** -->
								<xsd:complexType name="MIMEStream">
									<xsd:sequence>
										<xsd:element name="MIME" type="xsd:string"/>
										<xsd:element name="stream" type="xsd:base64Binary" minOccurs="1" maxOccurs="1"/>
									</xsd:sequence>
								</xsd:complexType>
							</xsd:schema>
						</wsdl:types>
						<!-- ******************************************************************************************************************** -->
						<!-- WSDL: MESSAGE DEFINITIONS  -->
						<!-- Here we define the messages that will be used by the WSDL operations, defined below.      -->
						<!-- ******************************************************************************************************************** -->
						<wsdl:message name="image_input">
							<wsdl:part name="PHOTO" type="pa:PhotoTransmitType"/>
							<wsdl:part name="WATERMARK" type="pa:WatermarkTransmitType"/>
						</wsdl:message>
						<wsdl:message name="singlestream_response">
							<wsdl:part name="result" type="pa:MIMEStream"/>
						</wsdl:message>
						<!-- ******************************************************************************************************************** -->
						<!-- WSDL: ABSTRACT OPERATION  DEFINITIONS (Behavior Definitions) -->
						<!-- Here we define the behaviors that the mechanism  implements -->
						<!-- ******************************************************************************************************************** -->
						<wsdl:portType name="photoWatermarker">
							<wsdl:operation name="getImage">
								<wsdl:input message="image_input"/>
								<wsdl:output message="singlestream_response"/>
							</wsdl:operation>
						</wsdl:portType>
						<!-- ******************************************************************************************************************** -->
						<!-- WSDL: THE BEHAVIOR SERVICE DEFINITION -->
						<!-- Here we define how to invoke operations of the Behavior Mechanism Service -->
						<!-- ******************************************************************************************************************** -->
						<wsdl:service name="Watermarker">
							<!-- THIS IS THE HTTP PORT -->
							<wsdl:port name="watermarker-impl" binding="HTTP-watermarker">
								<http:address location="http://icarus.lib.virginia.edu/"/>
							</wsdl:port>
							<!-- THIS IS THE SOAP PORT -->
							<wsdl:port name="watermarker-impl-soap" binding="SOAP-watermarker">
								<soap:address location="http://icarus.lib.virginia.edu/"/>
							</wsdl:port>
						</wsdl:service>
						<!-- ******************************************************************************************************************** -->
						<!--The HTTP Binding:  to run the behavior methods using HTTP GET -->
						<!-- ******************************************************************************************************************** -->
						<wsdl:binding name="HTTP-watermarker" type="Watermarker">
							<http:binding verb="GET"/>
							<wsdl:operation name="getImage">
								<http:operation location="cgi-bin/doWatermark.pl?image=(PHOTO)&amp;watermark=(WATERMARK)&amp;dpi=300"/>
								<wsdl:input>
									<http:urlReplacement/>
								</wsdl:input>
								<wsdl:output>
									<mime:content type="image/jpg"/>
								</wsdl:output>
							</wsdl:operation>
						</wsdl:binding>
						<!-- ******************************************************************************************************************** -->
						<!--The SOAP binding : to run the behavior methods using SOAP-->
						<!-- ******************************************************************************************************************** -->
						<wsdl:binding name="SOAP-watermarker" type="Watermarker">
							<soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
							<wsdl:operation name="getImage">
								<soap:operation soapAction="http://uva.lib.edu/mech/watermarker/getImage"/>
								<wsdl:input>
									<soap:body use="encoded" namespace="uva-bmech-image-w:112" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
								</wsdl:input>
								<wsdl:output>
									<soap:body use="encoded" namespace="uva-bmech-image-w:112" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"/>
								</wsdl:output>
							</wsdl:operation>
						</wsdl:binding>
					</wsdl:definitions>
				</METS:xmlData>
			</METS:mdWrap>
		</METS:techMD>
	</METS:amdSec>
