	<!-- DATASTREAM : METADATA DESCRIBING THE DATA BINDING SPECIFICATION  FOR THE MrSID MECHANISM -->
	<!-- Here we store XML data that conforms to the Fedora dsBindSpec schema. -->
	<!-- ****************************************************************************************************************************************** -->
	<METS:amdSec ID="DSBIND">
		<METS:techMD ID="DSBIND1.0" CREATED="2002-02-17T06:32:00" STATUS="A">
			<METS:mdWrap MIMETYPE="text/xml" MDTYPE="OTHER" LABEL="Datastream Binding Specification for MrSID mechanism">
				<METS:xmlData>
					<fbs:DSBindingSpec>
						<fbs:mechanismID scheme="URN">test:14</fbs:mechanismID>
						<fbs:behaviorDefID scheme="URN">test:13</fbs:behaviorDefID>
						<fbs:DSBinding BindingKeyName="MRSID" DSMin="1" DSMax="1" DSOrdinality="false">
							<fbs:DSBindingLabel>MrSid file</fbs:DSBindingLabel>
							<fbs:DSBindingInstructions>MrSid wavelet encoded image file</fbs:DSBindingInstructions>
							<fbs:DSMIME>image/x-mrsid-image</fbs:DSMIME>
						</fbs:DSBinding>
					</fbs:DSBindingSpec>
				</METS:xmlData>
			</METS:mdWrap>
